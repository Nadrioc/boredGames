<div class="body-container" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1518687513698-5ef14465356a?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=eecc658aab06ed87a93f02e3e703cf62&auto=format&fit=crop&w=2056&q=80');">
  <div class="index-container">
    <div class="games-title">
      <h2 class= "new-font">Your desired games</h2>
    </div>

    <div class="back-container">
      <%= link_to 'Go Again!', root_path, class: 'btn btn-primary back' %>
    </div>

    <div class="container">
      <div class="row">
        <% @games.each do |game| %>
        <div class="col-sm-12 col-md-6">
          <div class="games-container-card">
            <div class="games-image-card">
              <%= image_tag("#{game.image}", size: "300x200", alt: "Edit Entry") %>
            </div>
            <div class="card-description">
              <div>
                <h4 class= "new-font"><%= game.name %></h4>
                <p>Players: <%= game.player_count[0] %>-<%= game.player_count[-1] %></p>
                <p>Duration: <%= game.duration %></p>
                <p>Genres: <%= game.genre %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
