

<div class="body-container" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1518687513698-5ef14465356a?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=eecc658aab06ed87a93f02e3e703cf62&auto=format&fit=crop&w=2056&q=80');">

  <div class="show-container">
    <div class="game-name-container">
      <h3 class="new-font"><%= @game.name %></h3>
    </div>
    <div class="game-container">
      <div class="image-container">
        <%= image_tag("#{@game.image}", size: "600x600", alt: "Edit Entry") %>
      </div>
      <div class="game-info-container">
        <h3>Game Info</h3>
        <p>Players: <%= @game.player_count[0] %>-<%= @game.player_count[-1] %></p>
        <p>Duration: <%= @game.duration %></p>
        <p>Genres: <%= @game.genre %></p>
        <p>This is a <%= @game.card_or_board %> game</p>
      </div>
    </div>
  </div>
</div>




