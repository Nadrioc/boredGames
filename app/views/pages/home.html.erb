<div class="container">
<h1>Welcome to boredGames!</h1>

<p>Here we goooo</p>


<div class="container">
<h3>Find the game for you!</h3>

<%= form_tag games_path, method: :get do %>
  <%= number_field_tag :player_count, params[:player_count], class: "form-control",placeholder: "How many players?"
    %>
  <%= select_tag :duration, "<option>Quick (1-10min)</option><option>Short (10-40min)</option><option>Average (40-90min)</option><option>Long (90+min)</option>".html_safe, prompt: "How long should the game be?", class: "form-control" %>
  <%= number_field_tag :box_size, params[:box_size], class: "form-control",placeholder: "How big should the box be (if youre a weirdo and care about this stuff)"
    %>
  <%= select_tag :genre, "<option>Party</option><option>Resource</option><option>War</option><option>Trivia</option><option>Co-op</option><option>Dexterity</option><option>Classics</option><option>Puzzle</option>".html_safe, class: "form-control", prompt: "Pick a genre" %>
  <%= select_tag :card_or_board, "<option>Board</option><option>Card</option>".html_safe, class: "form-control", prompt: "Board or Card game?" %>
  <%= submit_tag "Find a Game!", class: "btn btn-primary" %>
<% end %>

</div>
</div>


